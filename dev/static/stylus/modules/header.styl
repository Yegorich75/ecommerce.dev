header
    background-color: #000

.header-top    
    .container
        display: flex
        align-items: center
        justify-content: space-between
        border-bottom: 1px solid grayColor

.header-bottom
    padding: 15px 0

.icon-logo-sytahata
    size(200px, auto)
    font-size: rem(14)

.header-nav
    &__item
        margin-bottom: 10px
        &:last-child
            margin-bottom: 0
        .icon
            size(17px)
            fill: #fff
            margin-right: 10px
    &__link
        border-bottom: 1px solid grayColor
        color: white
        font-size: rem(14)
        display: inline-block
        padding-bottom: 4px
        &--dotted
            border-bottom-style: dotted

.header__phone
    font-size: rem(20p)


    
